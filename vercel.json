
{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "api.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["backend/database.sqlite", "backend/*.csv"]
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api.js"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }